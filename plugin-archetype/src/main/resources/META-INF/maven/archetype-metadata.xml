<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor 
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 
    http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    
    <requiredProperties>
        <requiredProperty key="pluginId">
            <defaultValue>my-adapter</defaultValue>
        </requiredProperty>
        <requiredProperty key="pluginName">
            <defaultValue>My Adapter</defaultValue>
        </requiredProperty>
        <requiredProperty key="pluginClass">
            <defaultValue>MyAdapterPlugin</defaultValue>
        </requiredProperty>
        <requiredProperty key="pluginDescription">
            <defaultValue>Custom adapter for integration</defaultValue>
        </requiredProperty>
        <requiredProperty key="pluginVendor">
            <defaultValue>My Company</defaultValue>
        </requiredProperty>
        <requiredProperty key="pluginCategory">
            <defaultValue>custom</defaultValue>
        </requiredProperty>
        <requiredProperty key="pluginIcon">
            <defaultValue>plug</defaultValue>
        </requiredProperty>
        <requiredProperty key="pluginProtocol">
            <defaultValue>HTTP</defaultValue>
        </requiredProperty>
        <requiredProperty key="pluginAuth">
            <defaultValue>APIKey</defaultValue>
        </requiredProperty>
        <requiredProperty key="pluginDocUrl">
            <defaultValue>https://example.com/docs</defaultValue>
        </requiredProperty>
        <requiredProperty key="pluginLicense">
            <defaultValue>Apache-2.0</defaultValue>
        </requiredProperty>
        <requiredProperty key="pluginTag">
            <defaultValue>custom</defaultValue>
        </requiredProperty>
    </requiredProperties>
    
    <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false" encoding="UTF-8">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/test/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>